# Production Environment Configuration
# For Railway (Backend) and Vercel (Frontend) deployment

# Railway Backend Environment Variables
# Set these in Railway dashboard under your backend service

# Database (Railway PostgreSQL)
DATABASE_URL="postgresql://postgres:password@containers-us-west-1.railway.app:1234/railway"
DIRECT_URL="postgresql://postgres:password@containers-us-west-1.railway.app:1234/railway"

# JWT Configuration
JWT_SECRET="your-production-jwt-secret-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=5000
NODE_ENV="production"

# Frontend URL (your Vercel deployment)
FRONTEND_URL="https://your-app.vercel.app"

# Email Configuration (Brevo/SendGrid)
BREVO_API_KEY="your-brevo-api-key-here"
EMAIL_FROM="hello@gymbosslab.com"
EMAIL_FROM_NAME="GymBossLab"

# Alternative: SendGrid (if using SendGrid instead of Brevo)
# SENDGRID_API_KEY="your-sendgrid-api-key-here"
# SENDGRID_FROM_EMAIL="hello@gymbosslab.com"
# SENDGRID_FROM_NAME="GymBossLab"

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR="uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Wasabi S3 Storage (Production)
WASABI_ACCESS_KEY_ID="your-wasabi-access-key"
WASABI_SECRET_ACCESS_KEY="your-wasabi-secret-key"
WASABI_BUCKET_NAME="gympinoy-member-photos"
WASABI_REGION="ap-northeast-1"

# Session Configuration
SESSION_SECRET="your-production-session-secret-change-this"

# Vercel Frontend Environment Variables
# Set these in Vercel dashboard under your project settings

# NEXT_PUBLIC_API_URL="https://your-railway-backend.railway.app"
# NEXT_PUBLIC_FRONTEND_URL="https://your-app.vercel.app"
# NEXT_PUBLIC_API_BYPASS_AUTH="false"
# NEXT_PUBLIC_FEATURE_WELCOME_EMAIL="true"
# NEXT_PUBLIC_FEATURE_CREATE_ACCOUNT="true"
# NODE_ENV="production"