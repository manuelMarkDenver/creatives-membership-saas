# Test Environment Configuration
# For E2E Testing with isolated database

# Test PostgreSQL Database (running in Docker on standard port 5432)
# For host applications: use 'localhost' with standard port 5432
DATABASE_URL="postgresql://postgres:test_password_here@localhost:5432/your_test_database"
DIRECT_URL="postgresql://postgres:test_password_here@localhost:5432/your_test_database"

# Host Database URL (for running seed scripts from host machine)
HOST_DATABASE_URL="postgresql://postgres:test_password_here@localhost:5432/your_test_database"

# JWT configuration
JWT_SECRET="your-test-jwt-secret-change-this-for-testing"
JWT_EXPIRES_IN="7d"

# Server configuration
PORT=5000
NODE_ENV="test"

# Frontend Configuration
FRONTEND_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:5000"
NEXT_PUBLIC_FRONTEND_URL="http://localhost:3000"
NEXT_PUBLIC_API_BYPASS_AUTH="false"

# Feature Flags
NEXT_PUBLIC_FEATURE_WELCOME_EMAIL="true"
NEXT_PUBLIC_FEATURE_CREATE_ACCOUNT="true"

# Session configuration
SESSION_SECRET="your-test-session-secret-change-this-for-testing"

# Email configuration
# Development: Mailpit (running in Docker)
SMTP_HOST="localhost"
SMTP_PORT=1025
# Production: SendGrid (set SENDGRID_API_KEY for production)
SENDGRID_API_KEY="your-test-sendgrid-api-key-here"
SENDGRID_FROM_EMAIL="test@yourdomain.com"
SENDGRID_FROM_NAME="Test App"
# Mailpit Web UI: http://localhost:8025

# File upload configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR="uploads"

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Wasabi S3-Compatible Storage for photo uploads
# Get your credentials from: https://console.wasabisys.com
WASABI_ACCESS_KEY_ID="your-test-wasabi-access-key-here"
WASABI_SECRET_ACCESS_KEY="your-test-wasabi-secret-key-here"
WASABI_BUCKET_NAME="gympinoy-member-photos"
WASABI_REGION="us-east-1"  # Options: us-east-1, us-east-2, us-west-1, eu-central-1, ap-northeast-1, etc.

# Google OAuth Configuration
# Get your credentials from: https://console.developers.google.com/
GOOGLE_CLIENT_ID="your-test-google-client-id-here"
GOOGLE_CLIENT_SECRET="your-test-google-client-secret-here"
GOOGLE_REDIRECT_URI="http://localhost:5000/api/v1/auth/google/callback"
