# Local Development Environment
# PostgreSQL runs in Docker, Frontend & Backend run on host

# PostgreSQL Database (running in Docker on standard port 5432)
# For host applications: use 'localhost' with standard port 5432
DATABASE_URL="postgresql://postgres:your_password_here@localhost:5432/your_database_name"
DIRECT_URL="postgresql://postgres:your_password_here@localhost:5432/your_database_name"

# Host Database URL (for running seed scripts from host machine)
HOST_DATABASE_URL="postgresql://postgres:your_password_here@localhost:5432/your_database_name"

# JWT configuration
JWT_SECRET="your-super-secure-jwt-secret-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server configuration
PORT=5000
NODE_ENV="development"

# Frontend Configuration
FRONTEND_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:5000"
NEXT_PUBLIC_FRONTEND_URL="http://localhost:3000"
NEXT_PUBLIC_API_BYPASS_AUTH="false"

# Feature Flags
NEXT_PUBLIC_FEATURE_WELCOME_EMAIL="true"
NEXT_PUBLIC_FEATURE_CREATE_ACCOUNT="true"

# Session configuration
SESSION_SECRET="your-super-secure-session-secret-change-this-in-production"

# Email configuration
# Development: Mailpit (running in Docker)
SMTP_HOST="localhost"
SMTP_PORT=1025
# Production: SendGrid (set SENDGRID_API_KEY for production)
SENDGRID_API_KEY="your-sendgrid-api-key-here"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"
SENDGRID_FROM_NAME="Your App Name"
# Mailpit Web UI: http://localhost:8025

# File upload configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR="uploads"

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Supabase Storage (DEPRECATED - Switched to Wasabi)
# NOTE: Database is LOCAL PostgreSQL, but photos are stored in Wasabi S3
# SUPABASE_URL="https://your-project.supabase.co"
# SUPABASE_ANON_KEY="your-supabase-anon-key-here"
# SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key-here"

# Wasabi S3-Compatible Storage for photo uploads
# Get your credentials from: https://console.wasabisys.com
WASABI_ACCESS_KEY_ID="your-wasabi-access-key-here"
WASABI_SECRET_ACCESS_KEY="your-wasabi-secret-key-here"
WASABI_BUCKET_NAME="gympinoy-member-photos"
WASABI_REGION="us-east-1"  # Options: us-east-1, us-east-2, us-west-1, eu-central-1, ap-northeast-1, etc.

# Google OAuth Configuration
# Get your credentials from: https://console.developers.google.com/
GOOGLE_CLIENT_ID="your-google-client-id-here"
GOOGLE_CLIENT_SECRET="your-google-client-secret-here"
GOOGLE_REDIRECT_URI="http://localhost:5000/api/v1/auth/google/callback"