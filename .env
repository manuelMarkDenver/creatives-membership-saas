# Local Development Environment
# PostgreSQL runs in Docker, Frontend & Backend run on host

# PostgreSQL Database (running in Docker on standard port 5432)
# For host applications: use 'localhost' with standard port 5432
DATABASE_URL="postgresql://postgres:dev_password_123@localhost:5432/creatives_saas_dev"
DIRECT_URL="postgresql://postgres:dev_password_123@localhost:5432/creatives_saas_dev"

# Host Database URL (for running seed scripts from host machine)
HOST_DATABASE_URL="postgresql://postgres:dev_password_123@localhost:5432/creatives_saas_dev"

# JWT configuration
JWT_SECRET="your-super-secure-jwt-secret-for-development"
JWT_EXPIRES_IN="7d"

# Server configuration
PORT=5000
NODE_ENV="development"

# Frontend Configuration
FRONTEND_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:5000"
NEXT_PUBLIC_FRONTEND_URL="http://localhost:3000"
NEXT_PUBLIC_API_BYPASS_AUTH="false"

# Feature Flags
NEXT_PUBLIC_FEATURE_WELCOME_EMAIL="true"
NEXT_PUBLIC_FEATURE_CREATE_ACCOUNT="true"

# Session configuration
SESSION_SECRET="your-super-secure-session-secret-dev"

# Email configuration
# Development: Mailpit (running in Docker)
SMTP_HOST="localhost"
SMTP_PORT=1025
# Production: SendGrid (set SENDGRID_API_KEY for production)
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL="noreply@gymbosslab.com"
SENDGRID_FROM_NAME="GymBossLab"
# Mailpit Web UI: http://localhost:8025

# File upload configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR="uploads"

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

